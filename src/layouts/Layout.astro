---
interface Props {
  title?: string
  description?: string
}

const {
  title = 'Eassa Ayoub — Cognitive-First Systems Architect',
  description = 'Systems architect building software that matches how humans actually think. Specializing in AI infrastructure, type-driven design, and production hardening of AI-generated code.',
} = Astro.props

const siteUrl = 'https://heyoub.dev'
const ogImage = `${siteUrl}/og-card.png`
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, viewport-fit=cover" />
    <title>{title}</title>

    <!-- Preconnect for fonts (before any font requests) -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />

    <!-- Preload critical hero image -->
    <link rel="preload" href="/assets/video-poster.jpg" as="image" fetchpriority="high" />

    <!--
      Font loading: non-render-blocking via media="print" swap trick.
      Browsers download but don't block render. onload swaps to all media.
      font-display=swap in the URL ensures text shows immediately with fallback.
    -->
    <link
      rel="preload"
      href="https://fonts.googleapis.com/css2?family=Instrument+Serif:ital@0;1&display=swap"
      as="style"
    />
    <link
      href="https://fonts.googleapis.com/css2?family=DM+Sans:wght@300;400;500;600&family=Fira+Code:wght@400;500&family=Instrument+Serif:ital@0;1&family=Space+Mono:wght@400;700&display=swap"
      rel="stylesheet"
      media="print"
      onload="this.media='all'"
    />
    <noscript>
      <link href="https://fonts.googleapis.com/css2?family=DM+Sans:wght@300;400;500;600&family=Fira+Code:wght@400;500&family=Instrument+Serif:ital@0;1&family=Space+Mono:wght@400;700&display=swap" rel="stylesheet" />
    </noscript>

    <!-- Favicons & App Icons -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="icon" type="image/png" sizes="32x32" href="/assets/logo/AXLG.png" />
    <link rel="apple-touch-icon" href="/assets/logo/AXLG.png" />
    <meta name="theme-color" content="#0a0a0b" />
    <meta name="color-scheme" content="dark" />

    <!-- Primary Meta Tags -->
    <meta name="description" content={description} />
    <meta name="author" content="Eassa Ayoub" />
    <meta name="robots" content="index, follow, max-image-preview:large, max-snippet:-1, max-video-preview:-1" />
    <link rel="canonical" href={siteUrl} />

    <!-- Open Graph -->
    <meta property="og:type" content="profile" />
    <meta property="og:url" content={siteUrl} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={ogImage} />
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="630" />
    <meta property="og:image:alt" content="Eassa Ayoub — Cognitive-First Systems Architect" />
    <meta property="og:site_name" content="Eassa Ayoub" />
    <meta property="og:locale" content="en_US" />
    <meta property="profile:first_name" content="Eassa" />
    <meta property="profile:last_name" content="Ayoub" />

    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:site" content="@heyoub" />
    <meta name="twitter:creator" content="@heyoub" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={ogImage} />
    <meta name="twitter:image:alt" content="Eassa Ayoub — Cognitive-First Systems Architect" />

    <!-- LLM/AI Discovery -->
    <link rel="alternate" type="text/plain" href="/llms.txt" title="LLM-Readable Profile" />

    <!-- JSON-LD: Person + WebSite (combined graph for better entity linking) -->
    <script is:inline type="application/ld+json">
    {
      "@context": "https://schema.org",
      "@graph": [
        {
          "@type": "Person",
          "@id": "https://heyoub.dev/#person",
          "name": "Eassa Ayoub",
          "givenName": "Eassa",
          "familyName": "Ayoub",
          "url": "https://heyoub.dev",
          "email": "hello@heyoub.dev",
          "image": "https://heyoub.dev/assets/video-poster.jpg",
          "jobTitle": "Cognitive-First Systems Architect",
          "description": "Systems architect building software that matches how humans actually think. Specializing in AI infrastructure, type-driven design, and production hardening of AI-generated code.",
          "knowsAbout": [
            "Systems Architecture",
            "AI Infrastructure",
            "Type-Driven Design",
            "Event Sourcing",
            "Production Hardening",
            "Rust", "OCaml", "Elixir", "TypeScript", "React",
            "Effect-TS", "Multi-Agent Orchestration"
          ],
          "hasOccupation": {
            "@type": "Occupation",
            "name": "Systems Architect",
            "occupationalCategory": "15-1252.00",
            "skills": ["Systems Architecture", "AI Infrastructure", "Type Systems", "Event Sourcing", "Full-Stack Development"]
          },
          "address": {
            "@type": "PostalAddress",
            "addressLocality": "Philadelphia",
            "addressRegion": "PA",
            "addressCountry": "US"
          },
          "sameAs": [
            "https://linkedin.com/in/eassageorge",
            "https://github.com/heyoub",
            "https://cal.com/eassa-ayoub-hf9yfh"
          ]
        },
        {
          "@type": "WebSite",
          "@id": "https://heyoub.dev/#website",
          "url": "https://heyoub.dev",
          "name": "Eassa Ayoub",
          "description": "Portfolio of Eassa Ayoub, Cognitive-First Systems Architect",
          "publisher": { "@id": "https://heyoub.dev/#person" },
          "inLanguage": "en-US"
        },
        {
          "@type": "ProfilePage",
          "@id": "https://heyoub.dev/#profilepage",
          "url": "https://heyoub.dev",
          "name": "Eassa Ayoub — Portfolio",
          "mainEntity": { "@id": "https://heyoub.dev/#person" },
          "isPartOf": { "@id": "https://heyoub.dev/#website" },
          "inLanguage": "en-US"
        }
      ]
    }
    </script>

    <!-- JSON-LD: FAQ (genuine questions people would ask, not sales pitches) -->
    <script is:inline type="application/ld+json">
    {
      "@context": "https://schema.org",
      "@type": "FAQPage",
      "mainEntity": [
        {
          "@type": "Question",
          "name": "What is cognitive-first systems architecture?",
          "acceptedAnswer": {
            "@type": "Answer",
            "text": "Cognitive-first systems architecture is an approach where software is designed to match how humans actually think — reducing cognitive load by limiting choices, preserving mental models, and making complexity the machine's problem. The goal is interfaces and systems that feel like an extension of thought rather than tools that require retraining your brain."
          }
        },
        {
          "@type": "Question",
          "name": "What does Eassa Ayoub specialize in?",
          "acceptedAnswer": {
            "@type": "Answer",
            "text": "Eassa Ayoub is a systems architect specializing in AI infrastructure, type-driven design (Rust, OCaml, Effect-TS), and production hardening. He takes AI-generated prototypes and makes them production-ready — fixing compliance gaps, race conditions, and architectural debt through type-level guarantees rather than runtime checks."
          }
        },
        {
          "@type": "Question",
          "name": "What technologies does Eassa Ayoub work with?",
          "acceptedAnswer": {
            "@type": "Answer",
            "text": "His stack spans systems languages (Rust, OCaml, Go), runtime platforms (TypeScript, Elixir, Effect-TS), frontend (React, Three.js, Astro), and AI/ML (PyTorch, multi-agent orchestration). The common thread is type-driven design — using the compiler to enforce correctness rather than hoping for it at runtime."
          }
        }
      ]
    }
    </script>

    <!-- Prefetch below-fold video -->
    <link rel="prefetch" href="/assets/fs/3130182-hd_1280_720_30fps.mp4" as="video" />
  </head>
  <body>
    <slot />
  </body>
</html>

<style is:global>
  @import '../styles/globals.css';
</style>
