---
interface Props {
  title?: string
  description?: string
}

const {
  title = 'Eassa Ayoub — Cognitive-First Systems',
  description = 'Most software makes users carry its complexity. I build software that feels like thinking — systems that match how humans actually work.',
} = Astro.props

const siteUrl = 'https://heyoub.dev'
const image = `${siteUrl}/assets/Eassa_Headshot_-_Low_Res-1-removebg-preview.png`
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, viewport-fit=cover" />
    <title>{title}</title>

    <!-- Critical Resource Hints -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link rel="dns-prefetch" href="https://fonts.googleapis.com" />
    <link rel="dns-prefetch" href="https://fonts.gstatic.com" />

    <!-- Preload Critical Assets -->
    <link rel="preload" href="/assets/Hero_3.jpg" as="image" fetchpriority="high" />
    <link rel="preload" href="/assets/Eassa_Headshot_-_Low_Res-1-removebg-preview.png" as="image" />

    <!-- Favicons & App Icons -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="icon" type="image/png" sizes="32x32" href="/assets/logo/AXLG.png" />
    <link rel="apple-touch-icon" href="/assets/logo/AXLG.png" />
    <meta name="theme-color" content="#0a0a0b" />
    <meta name="color-scheme" content="dark" />

    <!-- Primary Meta Tags -->
    <meta name="title" content={title} />
    <meta name="description" content={description} />
    <meta name="keywords" content="Cognitive-First Systems, Systems Architecture, AI Infrastructure, Type Systems, Event Sourcing, Rust, OCaml, Elixir, TypeScript, React, Full-Stack, Software Architecture, Philadelphia Developer" />
    <meta name="author" content="Eassa Ayoub" />
    <meta name="robots" content="index, follow, max-image-preview:large, max-snippet:-1, max-video-preview:-1" />
    <meta name="googlebot" content="index, follow" />
    <link rel="canonical" href={siteUrl} />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="profile" />
    <meta property="og:url" content={siteUrl} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={image} />
    <meta property="og:image:width" content="380" />
    <meta property="og:image:height" content="480" />
    <meta property="og:image:alt" content="Eassa Ayoub - Cognitive-First Systems Architect" />
    <meta property="og:site_name" content="Eassa Ayoub Portfolio" />
    <meta property="og:locale" content="en_US" />
    <meta property="profile:first_name" content="Eassa" />
    <meta property="profile:last_name" content="Ayoub" />

    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:site" content="@heyoub" />
    <meta name="twitter:creator" content="@heyoub" />
    <meta name="twitter:url" content={siteUrl} />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={image} />
    <meta name="twitter:image:alt" content="Eassa Ayoub - Cognitive-First Systems" />

    <!-- AI Discovery & Schema -->
    <link rel="alternate" type="application/json+ld" href="/profile.json" title="AI-Readable Profile" />
    <link rel="alternate" type="text/plain" href="/llms.txt" title="LLM-Readable Profile" />
    <meta name="ai:profile" content="/profile.json" />
    <meta name="ai:capabilities" content="Systems Architecture, AI Infrastructure, Type Systems, Event Sourcing, Cross-Domain Integration" />
    <meta name="ai:contact" content="contact@heyoub.dev" />
    <meta name="ai:availability" content="open-to-opportunities" />
    <meta name="ai:response_time" content="24-48 hours" />

    <!-- JSON-LD Structured Data - Person -->
    <script is:inline type="application/ld+json">
    {
      "@context": "https://schema.org",
      "@type": "Person",
      "@id": "https://heyoub.dev/#person",
      "name": "Eassa Ayoub",
      "givenName": "Eassa",
      "familyName": "Ayoub",
      "url": "https://heyoub.dev",
      "email": "contact@heyoub.dev",
      "image": "https://heyoub.dev/assets/Eassa_Headshot_-_Low_Res-1-removebg-preview.png",
      "jobTitle": "Cognitive-First Systems Architect",
      "description": "Building software that feels like thinking. Systems where mental models become structure, constraints compile, and complexity transfers to the machine.",
      "knowsAbout": [
        "Systems Architecture",
        "AI Infrastructure",
        "Cross-Domain Integration",
        "Type Systems",
        "Event Sourcing",
        "Rust",
        "OCaml",
        "Elixir",
        "TypeScript",
        "React",
        "Effect-TS",
        "Multi-Agent Orchestration",
        "Cognitive-First Design"
      ],
      "hasOccupation": {
        "@type": "Occupation",
        "name": "Cognitive-First Systems Architect",
        "occupationalCategory": "15-1252.00",
        "skills": ["Systems Architecture", "AI Infrastructure", "Type Systems", "Event Sourcing", "Full-Stack Development"]
      },
      "address": {
        "@type": "PostalAddress",
        "addressLocality": "Philadelphia",
        "addressRegion": "PA",
        "addressCountry": "US"
      },
      "sameAs": [
        "https://linkedin.com/in/eassageorge",
        "https://github.com/heyoub",
        "https://cal.com/eassa-ayoub-hf9yfh"
      ]
    }
    </script>

    <!-- JSON-LD Structured Data - WebSite -->
    <script is:inline type="application/ld+json">
    {
      "@context": "https://schema.org",
      "@type": "WebSite",
      "@id": "https://heyoub.dev/#website",
      "url": "https://heyoub.dev",
      "name": "Eassa Ayoub Portfolio",
      "description": "Portfolio and professional profile of Eassa Ayoub, Cognitive-First Systems Architect",
      "publisher": {
        "@id": "https://heyoub.dev/#person"
      },
      "inLanguage": "en-US"
    }
    </script>

    <!-- Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=DM+Sans:wght@300;400;500;600&family=Fira+Code:wght@400;500&family=Instrument+Serif:ital@0;1&family=Space+Mono:wght@400;700&display=swap" rel="stylesheet" />

    <!-- Prefetch below-fold assets -->
    <link rel="prefetch" href="/assets/fs/3130182-hd_1280_720_30fps.mp4" as="video" />
  </head>
  <body>
    <slot />
  </body>
</html>

<style is:global>
  @import '../styles/globals.css';
</style>
